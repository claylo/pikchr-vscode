{
  "name": "pikchr",
  "displayName": "Pikchr",
  "description": "Preview Pikchr diagrams inside VS Code.",
  "version": "0.0.1",
  "private": true,
  "publisher": "claylo",
  "repository": "https://github.com/claylo/pikchr-vscode",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Programming Languages",
    "Visualization"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "pikchr",
        "aliases": [
          "Pikchr",
          "pikchr"
        ],
        "extensions": [
          ".pikchr"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "pikchr",
        "scopeName": "source.pikchr",
        "path": "./syntaxes/pikchr.tmLanguage.json"
      }
    ],
    "customEditors": [
      {
        "viewType": "pikchr.preview",
        "displayName": "Pikchr Preview",
        "selector": [
          {
            "filenamePattern": "*.pikchr"
          }
        ],
        "priority": "default"
      }
    ],
    "markdown.markdownItPlugins": true
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "vscode:prepublish": "pnpm run compile",
    "pretest": "pnpm run compile",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.3",
    "@types/vscode": "^1.90.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "mocha": "^11.7.5",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@10.26.2+sha512.0e308ff2005fc7410366f154f625f6631ab2b16b1d2e70238444dd6ae9d630a8482d92a451144debc492416896ed16f7b114a86ec68b8404b2443869e68ffda6"
}